generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ==================== RBAC Models ====================

model AdminUser {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  email         String   @unique
  password      String   // Hashed
  name          String   @default("")
  avatar        String?
  roleId        String?  @db.ObjectId
  role          Role?    @relation(fields: [roleId], references: [id], onDelete: SetNull)
  isActive      Boolean  @default(true)
  lastLoginAt   DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  activityLogs  ActivityLog[]
}

model Role {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   @unique
  description String   @default("")
  color       String   @default("bg-gray-500")
  rolePermissions RolePermission[]
  users       AdminUser[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Permission {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   @unique  // e.g., "products.create", "users.delete"
  description String   @default("")
  module      String   // e.g., "products", "users", "categories"
  action      String   // e.g., "create", "read", "update", "delete"
  rolePermissions RolePermission[]
  createdAt   DateTime @default(now())
}

model RolePermission {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  roleId       String     @db.ObjectId
  permissionId String     @db.ObjectId
  role         Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)
  createdAt    DateTime   @default(now())

  @@unique([roleId, permissionId])
  @@index([roleId])
  @@index([permissionId])
}

model ActivityLog {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  user        AdminUser @relation(fields: [userId], references: [id], onDelete: Cascade)
  action      String   // e.g., "create", "update", "delete", "login"
  module      String   // e.g., "products", "categories", "auth"
  details     String   // JSON string with additional details
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())
}

// ==================== Settings ====================

model Setting {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  key       String   @unique
  value     String
  type      String   @default("string") // string, number, boolean, json
  group     String   @default("general") // general, contact, seo, social
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ==================== Contact Inquiries ====================

model ContactInquiry {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  company   String?
  phone     String?
  message   String
  status    String   @default("new") // new, read, replied, archived
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ==================== Product Models ====================

model ProductCategory {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  slug         String   @unique
  icon         String   @default("Package")
  color        String   @default("from-blue-500 to-blue-600")
  sortOrder    Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  products     Product[]
  translations ProductCategoryTranslation[]
}

model ProductCategoryTranslation {
  id                String          @id @default(auto()) @map("_id") @db.ObjectId
  productCategoryId String   @db.ObjectId
  productCategory   ProductCategory @relation(fields: [productCategoryId], references: [id], onDelete: Cascade)
  locale            String
  name              String
  description       String          @default("")

  @@unique([productCategoryId, locale])
}

model IndustryCategory {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  slug         String   @unique
  icon         String   @default("Factory")
  color        String   @default("bg-gray-500")
  sortOrder    Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  products     Product[]
  translations IndustryCategoryTranslation[]
}

model IndustryCategoryTranslation {
  id                 String           @id @default(auto()) @map("_id") @db.ObjectId
  industryCategoryId String   @db.ObjectId
  industryCategory   IndustryCategory @relation(fields: [industryCategoryId], references: [id], onDelete: Cascade)
  locale             String
  name               String

  @@unique([industryCategoryId, locale])
}

model Product {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  sku             String   @unique
  categoryId      String?   @db.ObjectId
  category        ProductCategory? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  industryId      String?   @db.ObjectId
  industry        IndustryCategory? @relation(fields: [industryId], references: [id], onDelete: SetNull)
  images          String
  containerPoints String?
  featured        Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  translations    ProductTranslation[]
}

model ProductTranslation {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  productId   String   @db.ObjectId
  product     Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  locale      String
  name        String
  description String
  
  @@unique([productId, locale])
}
